
@model IEnumerable<WebApplication1.Models.TodoItem>

@{
    ViewBag.Title = "To-Do List";
}

<h2>To-Do List</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>@Html.ActionLink("Logout", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })</p>
<table class="table">
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Priority</th>
        <th>Due Date</th>
        <th>Is Complete</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Priority</td>
            <td>@item.DueDate?.ToString("yyyy-MM-dd")</td>
            <td>@item.IsComplete</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TodoItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TodoItemId })
            </td>
        </tr>
    }

</table>
